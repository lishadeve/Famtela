@inject Microsoft.Extensions.Localization.IStringLocalizer<AddEditGrowersModal> _localizer

<EditForm Model="@AddEditGrowerModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                if (AddEditGrowerModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @_localizer["Add Growers Record"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @_localizer["Update Growers Record"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @*@if (AddEditGrowerModel.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => AddEditGrowerModel.Id)" @bind-Value="AddEditGrowerModel.Id" Label="@_localizer["Id"]" />
                    </MudItem>
                }*@
                <MudItem xs="12" md="6">
                    <MudTextField T="int" For="@(() => AddEditGrowerModel.NumberofBirds)" @bind-Value="AddEditGrowerModel.NumberofBirds" Label="@_localizer["Number of Birds"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditGrowerModel.TypeofFeed)" @bind-Value="AddEditGrowerModel.TypeofFeed" Label="@_localizer["Type of Feed"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="decimal" For="@(() => AddEditGrowerModel.Feed)" @bind-Value="AddEditGrowerModel.Feed" Label="@_localizer["Feed(KG)"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditGrowerModel.Vaccination)" @bind-Value="AddEditGrowerModel.Vaccination" Label="@_localizer["Vaccination"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditGrowerModel.Disease)" @bind-Value="AddEditGrowerModel.Disease" Label="@_localizer["Disease"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditGrowerModel.Medication)" @bind-Value="AddEditGrowerModel.Medication" Label="@_localizer["Medication"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="int" For="@(() => AddEditGrowerModel.Mortality)" @bind-Value="AddEditGrowerModel.Mortality" Label="@_localizer["Mortality"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditGrowerModel.Remarks)" @bind-Value="AddEditGrowerModel.Remarks" Label="@_localizer["Remarks"]" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
            @if (AddEditGrowerModel.Id != 0)
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@_localizer["Update"]</MudButton>
            }
            else
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Save"]</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>